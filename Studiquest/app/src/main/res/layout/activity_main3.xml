<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue"
    android:layout_alignParentBottom="true"


    android:paddingBottom="@dimen/activity_vertical_margin2"
    android:paddingLeft="@dimen/activity_horizontal_margin2"
    android:paddingRight="@dimen/activity_horizontal_margin2"
    android:paddingTop="@dimen/activity_vertical_margin2"
    tools:context="org.example.amylipsky.myapplication.Main3Activity">



    <TextView
        android:id="@+id/textView5"
        style="@style/thank_you"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dip"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:text="@string/thank_you" />




    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
        android:orientation="vertical"

        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp">


        <EditText
            android:id="@+id/editText6"
            style="@style/textView_style1"

            android:layout_width="264dp"
            android:textSize="20sp"

            android:layout_height="wrap_content"
            android:layout_weight="0.0"
            android:text="User Name" />


        <EditText
            android:id="@+id/editText7"
            style="@style/textView_style1"

            android:layout_width="264dp"
            android:layout_height="wrap_content"

            android:layout_below="@id/editText6"
            android:layout_weight="0.0"
            android:text="Password"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editText10"
            style="@style/textView_style1"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_weight="0.0"
            android:text="E-mail" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"

            style="@style/button_newUser"

            android:layout_height="wrap_content"
            android:layout_weight="0.0"
            android:text="@string/create_new_user" />

    </LinearLayout>


</RelativeLayout>