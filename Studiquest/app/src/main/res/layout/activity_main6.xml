<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_alignParentBottom="true"
    android:background="#8acbe1">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="400dp"
        android:orientation="vertical"

        android:layout_height="490dp"
        android:weightSum="1"
        android:id="@+id/linearLayout"

        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="13dp">

        <TextView
            android:id="@+id/classs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"

            android:ems="10"
            android:inputType="textPersonName"
            android:text="Class:" />

        <TextView
            android:id="@+id/editText10"
            style="@style/editText_style"
            android:inputType="textPassword"
            android:layout_marginTop="14dp"
            />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"

            android:layout_marginTop="34dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Location:" />

        <TextView
            android:id="@+id/editText11"
            android:textSize="19sp"

            style="@style/editText_style"
            android:inputType="textPassword"
            />

        <TextView
            android:id="@+id/numberofppl"
            android:textSize="19sp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="33dp"
            android:ems="10"
            android:text="Number of People:" />

        <TextView
            android:id="@+id/editText12"
            style="@style/editText_style"
            />

        <TextView
            android:id="@+id/starttoend"
            android:textSize="19sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Start to end time"

            android:layout_marginTop="33dp" />

        <TextView
            android:id="@+id/editText2"
            style="@style/editText_style"
            android:inputType="textPassword"
            android:layout_below="@+id/editText16"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/editText16"
            android:layout_alignEnd="@+id/editText16" />


    </LinearLayout>
</RelativeLayout>